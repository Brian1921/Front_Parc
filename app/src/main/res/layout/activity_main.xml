<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:background="#03052E" android:textAlignment="center" tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout android:id="@+id/group_2"
                android:layout_width="415dp"
                android:layout_height="91dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="60dp"
                android:background="#D9D9D9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="18dp"
                    android:text="CLUB NÁUTICO"
                    android:textAlignment="textEnd"
                    android:textColor="#03052E"
                    android:textSize="20sp"/>
                <ImageView android:id="@+id/imageView4"
                    android:layout_width="74dp"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@id/textView7"
                    android:layout_marginLeft="183dp"
                    app:srcCompat="@mipmap/logo"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="Usuario"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/group_2"/>
            <EditText
                android:id="@+id/txtUsuario"
                android:layout_width="256dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_usuario"
                android:drawablePadding="12dp" android:ems="10"
                android:hint="USUARIO" android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="#CCD1D1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.327"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"/>
            <TextView android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Contraseña"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtUsuario"/>
            <EditText
                android:id="@+id/txtPass"
                android:layout_width="256dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="PASSWORD"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="#CCD1D1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"/>
            <TextView android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Rol"
                android:textColor="@color/white"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtPass"/>
            <Spinner
                android:id="@+id/spnUsuarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/black"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:layout_marginTop="100dp"
                app:layout_constraintTop_toBottomOf="@+id/spnUsuarios">
                <Button
                    android:id="@+id/btnIngresar"
                    android:layout_width="252dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="140dp"
                    android:layout_marginEnd="151dp"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="#D9D9D9"
                    android:text="Ingresar"
                    android:textColor="#03052E"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/txtRecuPass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="65dp"
                    android:text="¿Olvidó su contraseña?"
                    android:textColor="@color/white"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/txtRegisUsu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/txtRecuPass"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="100dp"
                    android:text="¿No te has registrado?"
                    android:textColor="@color/white"
                    android:textSize="20dp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>