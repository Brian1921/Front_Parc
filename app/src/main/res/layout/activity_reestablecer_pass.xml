<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reestablecer_pass">

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REESTABLECER CONTRASEÑA"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="59dp" />

    <Button
        android:id="@+id/btnRecuperarPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reestablecer"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="553dp" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id"
        tools:layout_editor_absoluteX="199dp"
        tools:layout_editor_absoluteY="116dp" />

    <EditText
        android:id="@+id/editId_recuperar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Id. Usuario"
        android:inputType="number"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="147dp" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="218dp" />

    <EditText
        android:id="@+id/editPass_recuperar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="251dp" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pregunta de Seguridad"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="315dp" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cual fue su primer colegio?"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="360dp" />

    <EditText
        android:id="@+id/editRes_recuperar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Respuesta"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="396dp" />

</androidx.constraintlayout.widget.ConstraintLayout>